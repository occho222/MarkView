<Window x:Class="MarkView.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkView"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        AllowDrop="True" Drop="Window_Drop"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Name="MainMenu">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="開く(_O)" Click="OpenFile_Click" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <Image Source="/Icons/folder-open.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="最近使用したファイル(_R)" Name="RecentFilesMenu"/>
                <Separator/>
                <MenuItem Header="印刷(_P)" Click="Print_Click" InputGestureText="Ctrl+P"/>
                <MenuItem Header="PDFにエクスポート(_E)" Click="ExportToPdf_Click"/>
                <Separator/>
                <MenuItem Header="終了(_X)" Click="Exit_Click" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="テーマ(_T)">
                    <MenuItem Header="ライトテーマ" Name="LightThemeMenuItem" Click="LightTheme_Click" IsCheckable="True" IsChecked="True"/>
                    <MenuItem Header="ダークテーマ" Name="DarkThemeMenuItem" Click="DarkTheme_Click" IsCheckable="True"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="フォントサイズを大きく(_I)" Click="IncreaseFontSize_Click" InputGestureText="Ctrl++"/>
                <MenuItem Header="フォントサイズを小さく(_D)" Click="DecreaseFontSize_Click" InputGestureText="Ctrl+-"/>
                <MenuItem Header="フォントサイズをリセット(_R)" Click="ResetFontSize_Click" InputGestureText="Ctrl+0"/>
                <Separator/>
                <MenuItem Header="サイドバーを表示(_S)" Name="ShowSidebarMenuItem" Click="ToggleSidebar_Click" IsCheckable="True" IsChecked="True"/>
            </MenuItem>
            <MenuItem Header="検索(_S)">
                <MenuItem Header="検索(_F)" Click="Search_Click" InputGestureText="Ctrl+F"/>
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)">
                <MenuItem Header="バージョン情報(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Grid.RowSpan="1" VerticalAlignment="Bottom" Name="MainToolBar">
            <Button Click="OpenFile_Click" ToolTip="ファイルを開く (Ctrl+O)">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/folder-open.png" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="開く"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="ToggleSidebar_Click" ToolTip="サイドバーを表示/非表示">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/sidebar.png" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="サイドバー"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Click="Search_Click" ToolTip="検索 (Ctrl+F)">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/search.png" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="検索"/>
                </StackPanel>
            </Button>
            <Separator/>
            <ComboBox Name="FontSizeComboBox" Width="60" ToolTip="フォントサイズ" SelectionChanged="FontSize_Changed">
                <ComboBoxItem Content="10" Tag="10"/>
                <ComboBoxItem Content="12" Tag="12"/>
                <ComboBoxItem Content="14" Tag="14" IsSelected="True"/>
                <ComboBoxItem Content="16" Tag="16"/>
                <ComboBoxItem Content="18" Tag="18"/>
                <ComboBoxItem Content="20" Tag="20"/>
                <ComboBoxItem Content="24" Tag="24"/>
            </ComboBox>
        </ToolBar>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" Name="SidebarColumn"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Name="SidebarGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Tabs -->
                <TabControl Grid.Row="0" Grid.RowSpan="2" Name="SidebarTabControl">
                    <!-- File Browser Tab -->
                    <TabItem Header="ファイル">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="フォルダ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Button Name="SelectFolderButton" Content="選択" Click="SelectFolder_Click" Margin="0,0,5,0"/>
                                <TextBlock Name="CurrentFolderText" Text="未選択" VerticalAlignment="Center" Foreground="Gray"/>
                            </StackPanel>

                            <TreeView Grid.Row="1" Name="FileTreeView" Margin="5"
                                     SelectedItemChanged="FileTreeView_SelectedItemChanged" ItemsSource="{Binding FileTreeItems}">
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Width="16" Height="16" Margin="0,0,4,0">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Source" Value="/Icons/file.png"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDirectory}" Value="True">
                                                                <Setter Property="Source" Value="/Icons/folder.png"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <TextBlock Text="{Binding Name}"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                            </TreeView>
                        </Grid>
                    </TabItem>

                    <!-- Table of Contents Tab -->
                    <TabItem Header="目次">
                        <TreeView Name="TocTreeView" Margin="5" SelectedItemChanged="TocTreeView_SelectedItemChanged" ItemsSource="{Binding TocItems}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock Text="{Binding Title}" ToolTip="{Binding Title}"/>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </TabItem>

                    <!-- Recent Files Tab -->
                    <TabItem Header="履歴">
                        <ListBox Name="RecentFilesListBox" Margin="5" SelectionChanged="RecentFiles_SelectionChanged" ItemsSource="{Binding RecentFiles}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding FilePath}" Foreground="Gray" FontSize="11"/>
                                        <TextBlock Text="{Binding LastOpened, StringFormat='最後に開いた日時: {0:yyyy/MM/dd HH:mm}'}"
                                                  Foreground="Gray" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Main Content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Content Area -->
                <Grid Grid.Row="0">
                    <!-- Welcome Screen -->
                    <Border Name="WelcomeScreen" Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="MarkView" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="軽量マークダウンビューア" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                                <Button Name="WelcomeOpenFileButton" Content="ファイルを開く"
                                       Click="OpenFile_Click" Margin="10" Padding="20,10" FontSize="14"/>
                                <Button Name="WelcomeSelectFolderButton" Content="フォルダを選択"
                                       Click="SelectFolder_Click" Margin="10" Padding="20,10" FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="または、ファイルをここにドラッグ＆ドロップしてください"
                                      HorizontalAlignment="Center" Margin="0,20" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <!-- Markdown Viewer -->
                    <wv2:WebView2 Name="MarkdownWebView" Visibility="Collapsed"/>
                </Grid>

                <!-- Search Bar -->
                <Border Grid.Row="1" Name="SearchPanel" Visibility="Collapsed" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                       BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" Margin="10,5">
                        <TextBlock Text="検索:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="SearchTextBox" Width="200" KeyDown="SearchTextBox_KeyDown"/>
                        <Button Name="SearchButton" Content="検索" Click="SearchButton_Click" Margin="5,0,0,0"/>
                        <Button Name="CloseSearchButton" Content="×" Click="CloseSearch_Click" Margin="5,0,0,0" Width="20"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Name="MainStatusBar">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="{Binding StatusText}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Name="FileInfoText" Text="{Binding FileInfoText}"/>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0"/>
                    <TextBlock Name="ZoomLevelText" Text="{Binding ZoomLevelText}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
